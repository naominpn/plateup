<form action="/user" method = "post">
    <p>Sign Up</p>
    <label for="email">Enter Email Address:</label>
    <input type="text" name="email" id="email" placeholder="Email Address">

    <label for="password">Create Password:</label>
    <input type="password" name="password" id="password" placeholder="Password">

    <p>Tell us about yourself</p>
    <label for="">Name: </label>
    <input type="text" name="name" id="name" placeholder="Name">

    <label for="">Current Bodyweight:</label>
    <input type="number" step="0.1" name="current_weight" id="current_weight" placeholder="Current Bodyweight"><span> kg</span>

    <label for="">Goal Bodyweight:</label>
    <input type="number" step="0.1" name="goal_weight" id="goal_weight" placeholder="Goal Bodyweight"><span> kg</span> 
    <button>Sign Up</button>
</form>